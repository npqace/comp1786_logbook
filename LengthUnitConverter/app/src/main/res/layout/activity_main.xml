<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->

        <!-- Main Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Input Value Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/app_name"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextInput"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_field_background"
                        android:hint="@string/edit_text_hint"
                        android:inputType="numberDecimal"
                        android:padding="16dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="16sp"/>

                    <Spinner
                        android:id="@+id/spinnerFromUnit"
                        android:layout_width="70dp"
                        android:layout_height="56dp"
                        android:background="@drawable/unit_selector_background"
                        android:padding="12dp"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Equals Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/equal_symbol"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Result Value Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewResultValue"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/result_field_background"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="@string/zero"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinnerToUnit"
                        android:layout_width="70dp"
                        android:layout_height="56dp"
                        android:background="@drawable/unit_selector_background"
                        android:padding="12dp"
                        android:textAlignment="center"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Clear Button -->
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/clear_all_txt"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/clear_button_background"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Result Display Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/guideCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/guidance_title"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/m_to_mm_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m_to_mm"
                    android:textSize="18sp"
                    android:textColor="@color/text_black"
                    android:gravity="start"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/m_to_mile_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m_to_mile"
                    android:textSize="18sp"
                    android:textColor="@color/text_black"
                    android:gravity="start"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/m_to_foot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m_to_foot"
                    android:textSize="18sp"
                    android:textColor="@color/text_black"
                    android:gravity="start"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>